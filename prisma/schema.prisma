datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String  @id @default(cuid()) @map("_id")
    email     String  @unique
    name      String?
    liked     String[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Post {
    id        String  @id @default(cuid()) @map("_id")
    title     String
    content   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}