// This is your Prisma schema file,
generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    email     String  @unique
    name      String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    clerkId   String @id @map("_id")
}

model Post {
    id        String  @id @default(cuid()) @map("_id")
    title     String
    content   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}