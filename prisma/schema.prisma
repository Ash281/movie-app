// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  favourites String[]
  Movie      Movie[]
}

model Movie {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  likes Int
  likedBy User @relation(fields: [id], references: [id], onDelete: Cascade)
}
